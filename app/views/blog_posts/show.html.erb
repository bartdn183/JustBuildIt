<div class="row">

<div class="col-lg-6 col-lg-offset-3">


<p id="notice"><%= notice %></p>

<div class="panel panel-primary">
	<div class="panel-heading">
		<%= @blog_post.title %>
	</div>
	<div class="panel-body">
		<p>by <%= @blog_post.author %></p>
		<p><%= @blog_post.blog_entry %></p>
	</div>	
</div>

<div class="panel panel-default">
	<div class="panel-heading">
		Comments
	</div>
	<div class="panel-body">
		 <%= render @comment %> <!-- ###"comments/comment" also ok ...comment partial to show comments -->
	</div>
</div>

<div class="panel panel-success">
	<div class="panel-heading">
		Make a comment
	</div>
	<div class="panel-body">
		<%= render 'comments/form' %>
		<!-- # only form if its in the same folder what you want to render -->
	</div>
</div>


 <%= link_to 'Edit', edit_blog_post_path(@blog_post), class: "btn btn-default" %>  |
 <%= link_to 'Back', blog_posts_path, class: "btn btn-default"%>
</div>
</div>