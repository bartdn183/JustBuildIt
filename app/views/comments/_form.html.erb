	<%= form_for(@comment) do |f| %>  <!-- ##controller -> def show @comment  -->
	<% if @comment.errors.any? %>
		<div class="error_explanation">
			<h2><%= pluralize(@blog_post.errors.count, "error") %> prohibited this blog post form being saved:</h2>

			<ul>
			<% @comment.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
			</ul>
		</div>
	<% end %>


	<div class="form-group">
		<%= f.text_field :author, class: "form-control", placeholder: "Your Name" %>
	</div>

	<div class="form-group">
		<%= f.text_area :comment_entry, class: "form-control", rows:"3", placeholder: "Enter comment here.." %>
	</div>

	<div class="form-group hidden">
		<%= f.number_field :blog_post_id, value: @blog_post.id %>
	
	</div>

	<div class="action"> 
	<%= f.submit "Comment", class: "btn btn-default" %>

	</div>

	<% end %>